{% block body %}
    <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="d-flex align-items-center">
                <a class="btn btn-primary" href="{{ path('app_etudiant_index') }}"> <span class="tf-icons bx bx-arrow-back rmt me-2"></span> Retourner a la liste</a>
