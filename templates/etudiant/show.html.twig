                            </tr>
                            <tr>
                                <th>Situation Familiale</th>
                                <td>{{ etudiant.SituationFamiliale }}</td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>{{ etudiant.DateDeNaissance ? etudiant.DateDeNaissance|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Lieu de naissance AR</th>
                                <td>{{ etudiant.LieuDeNaissanceAR }}</td>
                            </tr>
                            <tr>
                                <th>Lieu de naissance FR</th>
                                <td>{{ etudiant.LieuDeNaissanceFR }}</td>
                            </tr>
                            <tr>
                                <th>Statut</th>
                                <td>{{ etudiant.Statut }}</td>
                            </tr>
                            <tr>
                                <th>Passeport</th>
                                <td>{{ etudiant.Passeport }}</td>
                            </tr>
                            <tr>
                                <th>Adresse Fr</th>
                                <td>{{ etudiant.AdresseFr }}</td>
                            </tr>
                            <tr>
                                <th>Adresse Ar</th>
                                <td>{{ etudiant.AdresseAr }}</td>
                            </tr>
                            <tr>
                                <th>Code gouvernorat</th>
                                <td>{{ etudiant.CodeGouvernorat }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ etudiant.Email }}</td>
                            </tr>
                            <tr>
                                <th>Telephone Fixe</th>
                                <td>{{ etudiant.TelephoneFixe }}</td>
                            </tr>
                            <tr>
                                <th>Telephone Portable</th>
                                <td>{{ etudiant.TelephonePortable }}</td>
                            </tr>
                            <tr>
                                <th>Code Nature Bac</th>
                                <td>{{ etudiant.CodeNatureBac }}</td>
                            </tr>
                            <tr>
                                <th>Inscription</th>
                                <td>{{ etudiant.Inscription }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
