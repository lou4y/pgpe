                <div class="flex-row align-items-center ms-auto">
                    <div class="flex-row">
                        <div>{{ include('etudiant/_delete_form.html.twig') }}</div>

                    </div>

                </div>

            </div>


                <!-- Hoverable Table rows -->
                <div class="card mt-3">
                    <div class="table-responsive text-nowrap" style="min-height: 170px">
                        <table class="table">
                            <tbody class="table-border-bottom-0">

                            <tr>
                                <th>N°Inscriptionn</th>
                                <td>{{ etudiant.NInscriptionn }}</td>
                            </tr>
                            <tr>
                                <th>CIN</th>
                                <td>{{ etudiant.CIN }}</td>
                            </tr>
                            <tr>
                                <th>Nom Ar</th>
                                <td>{{ etudiant.NomAr }}</td>
                            </tr>
                            <tr>
                                <th>Prénom Ar</th>
                                <td>{{ etudiant.PrenomAr }}</td>
                            </tr>
                            <tr>
                                <th>Nom Fr</th>
                                <td>{{ etudiant.NomFr }}</td>
                            </tr>
                            <tr>
                                <th>Prénom Fr</th>
